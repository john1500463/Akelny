<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ResturantCRUD"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/RemoveRestaurantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="43dp"
        android:text="Remove Resturant"
        app:layout_constraintStart_toStartOf="@+id/EditRestaurantButton"
        app:layout_constraintTop_toBottomOf="@+id/EditRestaurantButton" />

    <Button
        android:id="@+id/EditRestaurantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Edit Restaurant Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddRestaurantButton" />

    <Button
        android:id="@+id/AddRestaurantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="86dp"
        android:text="Add Restaurant Details"
        app:layout_constraintStart_toStartOf="@+id/EditRestaurantButton"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>